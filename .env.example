# ===========================================
# ID Fine AI Chatbot - Environment Variables
# ===========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin:
# cp .env.example .env

# App
DEBUG=false

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=idf_chatbot
DB_USER=idf_user
DB_PASSWORD=your_secure_password_here

# Redis
REDIS_URL=redis://redis:6379/0

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=idf_documents

# Claude API (Anthropic)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_CLASSIFIER_MODEL=claude-haiku-4-5-20251001

# Odoo ERP
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_odoo_database
ODOO_USERNAME=your_username
ODOO_PASSWORD=your_password
ODOO_API_KEY=                          # Optional: if set, used instead of username/password
ODOO_VERSION=18
ODOO_VERIFY_SSL=true
ODOO_CATALOG_URL=
ODOO_CATALOG_URL_EN=

# Security
JWT_SECRET=your_very_long_random_secret_key_here_minimum_32_chars
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
WIDGET_ALLOWED_DOMAINS=idfine.com,www.idfine.com

# Embedding Model
EMBEDDING_MODEL=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024

# Upload
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=50
